<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hunar.arduinobluetoothcontroller"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.ArduinoBluetoothController" >
        <activity
            android:name="com.hunar.arduinobluetoothcontroller.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hunar.arduinobluetoothcontroller.LEDActivity"
            android:label="LED" >
        </activity>
        <activity
            android:name="com.hunar.arduinobluetoothcontroller.ServoMotorActivity"
            android:label="Servo Motor" >
        </activity>
        <activity
            android:name="com.hunar.arduinobluetoothcontroller.MainActivity"
            android:label="Splash Screen" >
        </activity>
        <activity
            android:name="com.hunar.arduinobluetoothcontroller.SelectDeviceActivity"
            android:label="Select Device" >
        </activity>
        <activity
            android:name="com.hunar.arduinobluetoothcontroller.ConnectDeviceActiviy"
            android:label="Connect device" >
        </activity>
        <activity
            android:name="com.hunar.arduinobluetoothcontroller.TerminalActivity"
            android:label="Terminal" >
        </activity>
    </application>

</manifest>